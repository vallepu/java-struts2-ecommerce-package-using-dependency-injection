<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>

<field name="cardnumber">
      <field-validator type="required">
          <message>Card number is required.</message>
      </field-validator>
      <field-validator type="long">
          <message>Card number can only be numbers.</message>
      </field-validator>
  </field>

<field name="cvv">
      <field-validator type="required">
          <message>CVV is required.</message>
      </field-validator>
       <field-validator type="int">
          <message>CVV is required.</message>
      </field-validator>
  </field>

 <field name="firstname">
      <field-validator type="requiredstring">
          <message>First name is required.</message>
      </field-validator>
  </field>

	<field name="lastname">
      <field-validator type="requiredstring">
          <message>Last name is required.</message>
      </field-validator>
  	</field>

	 <field name="emailaddress">
	  <field-validator type="requiredstring">
          <message>Incorrect email address format.</message>
      </field-validator>
      <field-validator type="email">
          <message>Incorrect email address format.</message>
      </field-validator>
  </field>

  <field name="address">
      <field-validator type="requiredstring">
          <message>Address is required.</message>
      </field-validator>
  </field>
 
  
 <field name="city">
      <field-validator type="requiredstring">
          <message>City is required.</message>
      </field-validator>
  </field>
 
 
 <field name="zipcode">
 	  <field-validator type="required">
          <message>ZipCode is required.</message>
      </field-validator>
      <field-validator type="int">
            <message>ZipCode must be an integer</message>
      </field-validator>
     
  </field>
 
 
 <field name="phonenumber">
 	   <field-validator type="required">
          <message>phone number is required.</message>
      </field-validator>
      <field-validator type="long">
          <message>Phone number must only contain numbers</message>
      </field-validator>
  </field>
 
 
 

</validators>
